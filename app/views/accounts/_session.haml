.session{ :id => :session, :class => "modal", :tabindex => -1, :role => :dialog, "aria-labelledby" => "sessionLabel" }
	.header{:class => "modal-header"}
		%button{:type => :button, :class => :close, "data-dismiss" => :modal}
			&times;
		-if current_account == nil then
			%h3{:id => "sessionLabel"}
				=I18n.t("Log_In")
		-else
			%h3{:id => "sessionLabel"}
	-if current_account == nil then
		%p
			You are NOT currently logged in!
		%br
		.login_method
			=#link_to pat(:persona), "", :class => :btn, :onclick => "navigator.id.request();"
			=#link_to pat(:openid), "",  :class => :btn
		%br
		.login
			-form_for :account, PadrApp.url(:accounts,:login),:class => "form-horizontal" do |f|
				.control-group
					=f.label I18n.t("account.Email"), :class => "control-label"
					=f.error_message_on :email
					.controls
						=f.text_field :email, :class => :span3, :required => :required
				.control-group
					=f.label I18n.t("account.Password"), :class => "control-label"
					=f.error_message_on :password
					.controls
						=f.password_field :password, :class => :span3

				.control-group
					.controls
						=f.submit I18n.t("account.Log_In"), :class => "btn btn-primary"
						=f.submit I18n.t("Cancel"), :class => :btn, "data-dismiss" => :modal, "aria-hidden" => true
	-else
		%p
			You are currently logged in!
		%br
		.logout
			-form_for :account, PadrApp.url(:accounts,:logout),:class => :form do
				.group
					=f.submit 'Log Out', :class => "btn btn-primary"
					=f.submit pat(:cancel), :class => :btn, "data-dismiss" => :modal, "aria-hidden" => true
