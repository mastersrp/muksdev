.sidebar.nav
	-if current_account != nil then
		%img{:src => "http://www.gravatar.com/avatar/#{Digest::MD5.hexdigest(current_account.email.downcase)}?s=64"}
		%div{:class => "btn-group"}
			%a{:class => "btn btn-primary", :href => "#{url(:accounts,:view,:id => current_account.id)}"}
				%i{:class => "icon-user icon-white"}
				=current_account.name
			%a{:class => "btn btn-primary dropdown-toggle", "data-toggle" => "dropdown", :href => "#"}
				%span{:class => "caret"}
			%ul{:class => "dropdown-menu"}
				%li
					%i{:class => "i"}
					=link_to "Control Panel", PadrApp.url(:accounts,:index)
				%li
					%i{:class => "i"}
					=link_to "Log Out", PadrApp.url(:accounts,:logout)
		%br
		=current_account.title
	-else
		=link_to "Sign Up", PadrApp.url(:accounts,:create)
		\/
		=link_to "Log In", "#session", "data-toggle" => "modal"
	%br
	%dl
		%dt
			Browse Forums
		%dt
			=link_to "All", PadrApp.url(:forum,:index), :class => "btn btn-link"
		%dt{:class => :divider}
		%dt
			=link_to "Blogs", PadrApp.url(:blog,:index), :class => "btn btn-link"
		%dt
			Favourites
		%dt
			=link_to "General", PadrApp.url(:forum,:index), :class => "btn btn-link"
