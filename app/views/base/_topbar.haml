.topbar.navbar.navbar-fixed-top
	.navbar-inner
		=link_to "HOME", PadrApp.url(:home,:index), :class => "brand pull-left"
		%ul{:class => :nav}
			-if current_account != nil then
				-if current_account.has_permission? "admin" then
					%li{:class => :dropdown}
						%a{ :class => "dropdown-toggle", "data-toggle" => "dropdown", :href => "#"}
							Admin
							%b{:class => :caret}
						%ul{:class => "dropdown-menu"}
							%li
								=link_to "Users", PadrApp.url(:accounts,:all)
							%li
								=link_to "Sections", PadrApp.url(:sections,:browse)
			%li{:class => :dropdown}
				%a{:class => "dropdown-toggle", "data-toggle" => "dropdown", :href => "#"}
					Blogs
					%b{:class => :caret}
				%ul{:class => "dropdown-menu"}
					%li
						=link_to "Browse", PadrApp.url(:blog,:browse)
						%form{:class => "navbar-search"}
							%input{:type => :text, :class => "search-query", :placeholder => "Search ... NOT IMPLEMENTED"}
			%li{:class => :dropdown}
				%a{:class => "dropdown-toggle", "data-toggle" => "dropdown", :href => "#"}
					Discussions
					%b{:class => :caret}
				%ul{:class => "dropdown-menu"}
					%li
						=link_to "Browse", PadrApp.url(:forum,:browse)
						%form{ :class => "navbar-search pull-left"}
							%input{:type => :text, :class => "search-query", :placeholder => "Search ... NOT IMPLEMENTED"}
			%li{:class => :dropdown}
				%a{:class => "dropdown-toggle", "data-toggle" => "dropdown", :href => "#"}
					%i{:class => "icon-user"}
					%b{:class => :caret}
				%ul{:class => "dropdown-menu"}
					-if current_account != nil then
						%li
							%a{ :href => PadrApp.url(:accounts,:index) }
								%img{:src => "http://www.gravatar.com/avatar/#{Digest::MD5.hexdigest(Account.get(current_account[:_id]).email.downcase)}?s=20?r=pg"}
								%b{:class => :fullname}
									=current_account.name
								%small{:class => :metadata}
									(Edit profile)
						%li{:class => "divider"}
						%li
							=link_to "Blog",	PadrApp.url(:blog,:index)
							%a{:href => "#"}
								%i{:class => "icon-envelope"}
								Messages
						%li{:class => "divider"}
						%li
							=link_to "Log Out", PadrApp.url(:accounts,:logout)
					-else
						%li
							=link_to "Log In", "#session", "data-toggle" => "modal"
							=link_to "Create Account", PadrApp.url(:accounts,:create)
