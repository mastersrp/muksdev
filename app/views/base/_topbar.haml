.topbar.navbar
	.navbar-inner
		%ul{:class => :nav}
			-if current_account != nil then
				-if current_account.has_permission? "admin" then
					%li{:class => :dropdown}
						%a{ :class => "dropdown-toggle", "data-toggle" => "dropdown", :href => "#"}
							=I18n.t("Admin")
							%b{:class => :caret}
						%ul{:class => "dropdown-menu"}
							%li
								=link_to I18n.t("Users"), PadrApp.url(:accounts,:all)
							%li
								=link_to I18n.t("Sections"), PadrApp.url(:sections,:browse)
			%li{:class => :dropdown}
				%a{:class => "dropdown-toggle", "data-toggle" => "dropdown", :href => "#"}
					=I18n.t("Blogs")
					%b{:class => :caret}
				%ul{:class => "dropdown-menu"}
					%li
						=link_to I18n.t("Browse"), PadrApp.url(:blog,:browse)
			%li{:class => :dropdown}
				%a{:class => "dropdown-toggle", "data-toggle" => "dropdown", :href => "#"}
					=I18n.t("Discussions")
					%b{:class => :caret}
				%ul{:class => "dropdown-menu"}
					%li
						=link_to I18n.t("Browse"), PadrApp.url(:forum,:browse)
			%li{:class => :dropdown}
				%a{:class => "dropdown-toggle", "data-toggle" => "dropdown", :href => "#"}
					%span{:class => "glyphicon glyphicon-user"}
					%b{:class => :caret}
				%ul{:class => "dropdown-menu"}
					-if current_account != nil then
						%li
							%a{ :href => PadrApp.url(:accounts,:index) }
								%img{:src => "http://www.gravatar.com/avatar/#{Digest::MD5.hexdigest(Account.get(current_account[:_id]).email.downcase)}?s=20?r=pg"}
								%b{:class => :fullname}
									=current_account.name
								%small{:class => :metadata}
									(
									=I18n.t("account.Edit_Profile")
									)
						%li{:class => "divider"}
						%li
							=link_to "Min Blog",	PadrApp.url(:blog,:index)
							%a{:href => "#"}
								%span{:class => "glyphicon glyphicon-envelope"}
								=I18n.t("account.Messages")
						%li{:class => "divider"}
						%li
							=link_to I18n.t("account.Log_Out"), PadrApp.url(:accounts,:logout)
					-else
						%li
							=link_to I18n.t("account.Log_In"), "#session", "data-toggle" => "modal"
						%li
							=link_to I18n.t("account.Create_New_Account"), PadrApp.url(:accounts,:create)
