%h2{:name => @entry.id}
	=@entry[:title]
-if current_account == @entry.account then
	-if current_account.role == "admin" then
		=link_to pat(:edit), "", :class => :btn, :onclick => "editTitle();"
	
.post{:name => @entry.id}
	.container-fluid
		.row-fluid
			.user.span2
				%h3=link_to @entry.account[:name], url(:accounts, :view, :id => @entry.account[:_id])
				%img{:src => "http://www.gravatar.com/avatar/#{Digest::MD5.hexdigest(Account.get(@entry.account[:_id]).email.downcase)}?s=64?r=pg"}
			.content.span8
				=@entry[:body]
		%br
		%p
			Posted on:
			=@entry[:created_at]
