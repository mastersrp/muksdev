#forum
	%h2
		Discussions

	=link_to "New Discussion", PadrApp.url(:forum,:new)	
	%br
	%table
		%tr
			%th
				Title
			%th
				Posts
			%th
				Views
	
		- @discussions.each do |thread|
			%tr{:id => 'post'}
				%td
					=link_to thread[:title], PadrApp.url(:forum, :view, :id => thread[:_id])
					%br
					Posted by
					=link_to thread.account[:name], PadrApp.url(:accounts,:view, :id => thread.account[:_id])
				%td
					=thread.posts.count
				%td
					0
	
	%br
	
	=link_to 'New Discussion', url(:forum,:new)
	%br
