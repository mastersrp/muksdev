!!!
%html
	%head
		%meta{:content => "text/html; charset=utf-8", "http-equiv" => "Content-Type"}
		=stylesheet_link_tag 'aloha'
		=javascript_include_tag 'application', 'jquery', 'require', 'aloha'
		%title
			=@title
	%body
		#header
		#content
			.sidebar
				%input{:type => 'text', :list => 'subapps', :id => 'changeApp', :onChange => "changeApp(this.text)"}
				%datalist{:id => 'subapps' }
					%option{:value => 'Front'}
						\/
					%option{:value => 'Forums'}
						\/forum
					- if current_account != nil then
						- if current_account[:role] == "admin" then
							%option{:value => 'Admin'}
								\/admin
				%br
				- if current_account != nil then
					=link_to current_account[:name], PadrApp.url(:accounts,:view, :id => current_account[:_id] )
					(
					=current_account.balance
					BTC )
					%br
					=current_account[:avatar]
					%br
					=current_account[:title]
					%br
					=link_to "Control Panel", PadrApp.url(:accounts,:index)
					%br
					=link_to "Log Out", PadrApp.url(:accounts,:logout)
					%br
				- else
					=link_to "Sign Up", PadrApp.url(:accounts,:index)
					\/
					=link_to "Log In", PadrApp.url(:accounts,:index)
					%br
			=yield
		#footer
			%p
				Design and backend software by
				%a{:href => 'http://necrophcodr.co.cc'} necrohpcodr
				
		:javascript
			Aloha.ready(function(){
				Aloha.jQuery("#editable").aloha();
			});
			var changeApp = function(elm){
				window.location.href = elm
				// Redirect user to ' url(elm) '
			}
