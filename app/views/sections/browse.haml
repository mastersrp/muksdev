.section{:id => :section, :class => "modal hide fade", :tabindex => -1, :role => :dialog, "aira-labelledby" => "sectionLabel" }
	.header{:class => "modal-header"}
		%button{:type => :button, :class => :close, "data-dismiss" => :modal}
			&times;
		%h3{:id => "sectionLabel"}
			Create New Section
	-form_for :section, PadrApp.url(:sections,:create), :class => :form do |f|
		.group
			=f.label I18n.t("section.Title")
			=f.error_message_on :title
			=f.text_field :title, :class => :span3

		.group
			=f.submit pat(:save), :class => "btn btn-primary"
			=f.submit pat(:cancel), :class => :btn, "data-dismiss" => :modal, "aria-hidden" => true

=link_to "New Section", "#section", "data-toggle" => :modal, :class => :btn
%table{:class => "table table-hover"}
	%tr
		%th
			Name

	-Section.all.each do |section|
		%tr
			%td
				=link_to section.title, "#"
